#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"

jim = User.new
jim.first_name = "Jim"
jim.last_name = "Henson"

alice = Student.new
alice.first_name = "Alice"
alice.last_name = "Casey"

some_knowledge = avi.teach
some_more_knowledge = avi.teach
even_more_knowledge = avi.teach

steve.learn(some_knowledge)
#jim.learn(some_more_knowledge)
alice.learn(even_more_knowledge)

puts "#{steve.first_name} just learned this important knowledge: '#{steve.knowledge.first}' from Avi"
#puts "#{jim.first_name} just learned this important knowledge: '#{jim.knowledge.first}' from Avi"
puts "#{alice.first_name} just learned this important knowledge: '#{alice.knowledge.first}' from Avi"
